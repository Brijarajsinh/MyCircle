<header class="navbar navbar-expand-md navbar-light d-print-none">
  <div class="container-xl">
    <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
      <a href="/">MyCircle</a>
    </h1>
    <div class="navbar-nav flex-row order-md-last ">
      <div class="nav-item d-none d-md-flex me-3">
        <div class="btn-list reported">
          <div>
            <li class="nav-item dropdown">
              <label for="sorting">Search post BY:</label>
              <input type="text" name="search" id="search" class="search" placeholder="Search BY title or Description">
            </li>
          </div>
          <li class="nav-item dropdown">
            <label for="sorting">Sort post BY:</label>
            <select class="sort">
              <option value="date">date and time</option>
              <option value="title">title</option>
            </select>
          </li>
        </div>
      </div>
      <div class="nav-item dropdown d-none d-md-flex me-3 ">
        <a href="#" class="nav-link px-0 notify" data-bs-toggle="dropdown" tabindex="-1" aria-label="Show notifications">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
            stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M10 5a2 2 0 0 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6" />
            <path d="M9 17v1a3 3 0 0 0 6 0v-1" />
          </svg>
          
        </a>


        <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-end dropdown-menu-card">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Last updates</h3>
            </div>
            <div class="row list-group list-group-flush list-group-hoverable notification" style="width: max-content;">
            </div>
          </div>
        </div>

      </div>
      <div class="nav-item dropdown header">
        {{#if user}}
        <a href="javascript:void(0);" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown"
          aria-label="Open user menu">
          <span class="avatar avatar-sm">
            {{#if user.profile}}
            <img src="/images/user_images/{{user.profile}}" style="height:32px; width:32px;" />
            {{else}}
            <img src="/images/default_user.jpg" style="height:32px; width:32px;" />
            {{/if}}
          </span>
          <div class="d-none d-xl-block ps-2">
            <div>{{user.fname}} {{user.lname}}</div>
            <div>{{user.email}}</div>
          </div>
        </a>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
          <a href="javascript:void(0);" class="dropdown-item" id="edit">Edit Profile</a>
          <a href="/logout" class="dropdown-item" id="logout">Logout</a>
        </div>
        {{else}}
        <div class="button">
          <a href="/login">Login </a>
        </div>
        <div class="button">
          <a href="/registration">Registration</a>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{> users/edit}}
</header>